        # inactive_workspace #1F1A2D #1F1A2D #888888
        # urgent_workspace   #eb6f92 #eb6f92 #ffffff
        # }

        # Grayscale
        colors {
        background #2E2E2E            # Dark gray base color
        statusline #E0E0E0            # Light gray text color
        separator #1A1A1A             # Very dark gray separator color

        focused_workspace  #A0A0A0 #A0A0A0 #1A1A1A
        active_workspace   #808080 #808080 #1A1A1A
        inactive_workspace #3A3A3A #3A3A3A #888888
        urgent_workspace   #C0C0C0 #C0C0C0 #1A1A1A
        }
}




